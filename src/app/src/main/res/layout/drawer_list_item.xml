<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp" >

    <ImageView
        android:id="@+id/nav_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_dial_pad"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:contentDescription="@string/nav_item_description"/>

    <TextView
        android:id="@+id/nav_item_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/dummy_data_nav_title"
        android:layout_toRightOf="@id/nav_list_icon"
        android:layout_toEndOf="@id/nav_list_icon"
        style="@style/text_base"
        android:textSize="20sp"/>

</RelativeLayout>
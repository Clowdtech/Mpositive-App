<clowdtech.mpositive.areas.reporting.product.DualPaneContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <include
        layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/action_bar"
        android:baselineAligned="false"
        android:divider="?android:attr/dividerHorizontal"
        android:orientation="horizontal"
        android:showDividers="none">

        <FrameLayout
            android:id="@+id/product_reporting_column_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/product_reporting_column_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" />

    </LinearLayout>

</clowdtech.mpositive.areas.reporting.product.DualPaneContainer>

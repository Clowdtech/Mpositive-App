<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_view_row_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/product_reporting_row_layout"
        android:background="@drawable/button_row"
        style="@style/list_view_card_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reporting_row_value"
            style="@style/list_view_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="@string/dummy_data_price_low" />

        <TextView
            android:id="@+id/reporting_row_text"
            style="@style/list_view_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/reporting_row_value"
            android:layout_toStartOf="@+id/reporting_row_value"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="@string/dummy_data_transactions_period" />

    </RelativeLayout>

</LinearLayout>
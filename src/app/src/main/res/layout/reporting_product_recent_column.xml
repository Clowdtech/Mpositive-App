<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reporting_product_recent_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/reporting_header"
        android:text="@string/reporting_product_header" />

    <ListView
        android:id="@+id/reporting_days_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/reporting_product_recent_header"
        android:verticalSpacing="2dp"
        android:stretchMode="columnWidth"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/transparent">

    </ListView>

</RelativeLayout>
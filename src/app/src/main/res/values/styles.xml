<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="listViewTextView" parent="android:Widget.TextView">
    </style>

    <style name="listViewButton" parent="android:Widget.DeviceDefault.Button">
    </style>

    <style name="listViewRow">
    </style>

    <style name="Button.Positive" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_cta_positive</item>
    </style>

    <style name="text_base">
        <item name="android:textColor">@color/font_primary</item>
    </style>

    <style name="text_secondary" parent="text_base">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/font_light</item>
        <item name="android:textColorHint">@color/font_light</item>
    </style>

    <style name="text_dialog_message" parent="text_base">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="nummerPad" parent="text_base">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="pager_tab_strip" parent="text_base">
        <!--<item name="android:background">@color/brand_primary</item>-->
        <!--<item name="android:textColor">@color/background_light</item>-->
        <item name="android:background">@color/background_light</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="tender_complete_message" parent="text_base">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_secondary" parent="text_base">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingRight">20sp</item>
    </style>

    <style name="button_dialog" parent="text_base">
        <item name="android:textSize">18sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/brand_primary</item>
    </style>

    <style name="button_cta" parent="text_base">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@drawable/button_cta_positive_text_color</item>
        <item name="android:background">@drawable/button_cta_positive</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="button_cta_actionbar" parent="button_cta">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="button_charge_action">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/background_light</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="button_cta_split" parent="button_cta">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="list_view_row_container">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:height">80dp</item>
    </style>

    <style name="list_view_card_container">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="list_view_text" parent="text_base">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="reporting_header" parent="text_base">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="reporting_footer_summary">
        <item name="android:padding">6sp</item>
    </style>

    <style name="reporting_header_icon">
        <item name="android:padding">1dp</item>
    </style>

    <style name="receipt_heading_charge" parent="text_base">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">52sp</item>
    </style>

    <style name="receipt_row_container">
    </style>

    <style name="receipt_row">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="receipt_extra_info_row">
    </style>

    <style name="receipt_extra_info_text" parent="text_base">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="ViewDivider__Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/brand_accent</item>
    </style>

    <style name="ViewDivider__Horizontal">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/brand_accent</item>
    </style>




    <style name="filter_group">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="filter_group_heading" parent="text_secondary">
        <item name="android:textColor">@color/brand_primary</item>
    </style>

    <style name="filter_entry_container" parent="text_base">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/view_group_background</item>
    </style>

    <style name="numeric_entry_value" parent="text_base">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/view_group_background</item>
    </style>

    <style name="form_spinner" parent="text_base">
    </style>

    <style name="form_check" parent="filter_entry_container">
    </style>

    <style name="form_radio" parent="filter_entry_container">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@drawable/radio_text</item>
    </style>

    <style name="form_radio_middle" parent="form_radio">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@drawable/radio_middle</item>
    </style>

    <style name="form_radio_left" parent="form_radio">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@drawable/radio_left</item>
    </style>

    <style name="form_radio_right" parent="form_radio">
        <item name="android:background">@drawable/radio_right</item>
    </style>

    <style name="form_radio_middle_payment" parent="form_radio_middle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="form_radio_left_payment" parent="form_radio_left">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="form_radio_right_payment" parent="form_radio_right">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="form_spinner_drop" parent="form_spinner">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@color/background_white</item>
    </style>

    <style name="search_input" parent="text_secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:drawableLeft">@drawable/ic_action_search</item>
        <item name="android:drawableStart">@drawable/ic_action_search</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/search_row_background</item>
        <item name="android:alpha">0.6</item>
    </style>

</resources>
